class HelloWorld {
    static final int MOD = 100000007;
    public static long cake(int N){
       
        long result = (long)N*(N+1)/2 %MOD;
        return (result+1)%MOD;
    }
    public static void main(String[] args) {
        int N=3;
        long ans=cake(N);
        System.out.println(ans);
    }
}
