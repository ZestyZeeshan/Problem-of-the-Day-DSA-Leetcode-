import java.util.*;
class HelloWorld {
    public static int food(int num, int diff, int[] arr) {
        int n = arr.length;
        int count =0;
        for(int i=0;i<n;i++){
            if(Math.abs(arr[i]-num)<=diff){
                count += 1;
            }
        
        
        
    }
    return count;
    }
    
    public static void main(String[] args) {
        int num = 13;  // Number of residents
        int diff = 2;  // Units of food per resident
        int arr[] = {12,3,14,56,77,13};  // Food available at different stops
        
        // Calculate and output the result
        int ans = food(num, diff, arr);
        System.out.println(ans);
    }
}
